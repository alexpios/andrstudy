<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexandrkuchinsky.studandroidbook.androidRes"
    android:orientation="vertical"
    android:background="@color/foncode1">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:textColor="@color/fon"
        android:text="Каталоги ресурсов, поддерживаемые в каталоге res/ проекта."
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="15dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="205dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:background="@drawable/recc"
            android:paddingBottom="10dp"

            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="Каталог"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:background="@drawable/recc"
            android:paddingBottom="10dp"

            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="Тип ресурсов"

            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <GridView
        android:clipChildren="false"
        android:layout_weight="1"
        android:id="@+id/gvMain"
        android:layout_width="match_parent"
        android:layout_height="1700dp"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:stretchMode="columnWidth"
        android:scrollbars="none"
        android:numColumns="2"
        android:horizontalSpacing="16dp"
        android:verticalSpacing="16dp">

    </GridView>

</LinearLayout>
</ScrollView>
