<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alexandrkuchinsky.studandroidbook.MainActivity"
    android:orientation="vertical"
    android:background="@drawable/background">

<LinearLayout
    android:id="@+id/l1"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:text="@string/text_ls1"
        android:textColor="@color/lightorange"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="3dp"
        android:text="@string/text_ls2"
        android:textAlignment="center"
        android:textColor="@color/lightorangedark"
        android:textSize="15dp" />

</LinearLayout>

    <LinearLayout
        android:id="@+id/l2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
android:background="@drawable/cosmo"
        >

        <Button
            android:id="@+id/btnstart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_btn1"
            android:layout_gravity="center"
            android:background="@drawable/buttonstyle"/>

    </LinearLayout>




</LinearLayout>
